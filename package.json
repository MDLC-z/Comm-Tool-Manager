{
  "name": "comm-manager",
  "version": "0.0.1",
  "description": "Local commission manager for freelance artists.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:portable": "electron-builder --win portable --x64",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --linux",
    "clean": "rimraf dist"
  },
  "keywords": [
    "commissions",
    "art",
    "manager",
    "organizer",
    "electron"
  ],
  "author": "Panüçû",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "electron-reload": "^2.0.0-alpha.1",
    "smart-buffer": "^4.2.0"
  },
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.mldc.comm-manager",
    "productName": "Comm Manager",
    "copyright": "Copyright ¬© 2025 Panüçû",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "!**/node_modules/fsevents/**",
      "!**/node_modules/*/{CHANGELOG.md,README*,test,__tests__,examples}",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.idea,.vs,.nyc_output}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Graphics",
      "synopsis": "Commission manager for artists",
      "description": "A simple desktop app to manage and organize art commissions locally and privately."
    },
    "asar": true
  }
}
